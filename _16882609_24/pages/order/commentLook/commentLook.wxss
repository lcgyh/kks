page {
    background-color: #f4f4f4;
}

.commentPage {
    position: relative;
}

.navBar {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    z-index: 90;
    background-color: white;
}

.navBarTitle {
    position: relative;
    width: 100%;
    height: 44px;
    line-height: 44px;
    text-align: center;
    color: #272727;
    font-size: 38rpx;
    font-weight: bold;
}

.navBarBackButtonImage {
    position: absolute;
    width: 18px;
    height: 18px;
    top: 13px;
    left: 40rpx;
}

.backButton {
    position: absolute;
    width: 44px;
    height: 44px;
    top: 0;
    left: 32rpx;
}

.commentCell {
    padding: 32rpx;
    background-color: white;
}

.commentUserInfo {
    height: 48rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.commentUserInfo image {
    width: 48rpx;
    height: 48rpx;
    border-radius: 24rpx;
    border: 1rpx solid #e6e6e6;
}

.commentUserInfo view {
    color: #272727;
    font-size: 22rpx;
    font-weight: bold;
    margin-left: 8rpx;
}

.commentContent {
    margin-top: 8rpx;
    margin-left: 36rpx;
    font-size: 0;
}

.commentContentStr {
    margin-left: 20rpx;
    font-size: 20rpx;
    color: #272727;
}

.commentContentImage {
    margin: 20rpx 0 0 20rpx;
    display: inline-block;
    width: 194rpx;
    height: 194rpx;
    border-radius: 10rpx;
    border: 1rpx solid #e6e6e6;
}

.commentContentImageBig {
    margin: 20rpx 0 0 20rpx;
    display: inline-block;
    width: 302rpx;
    height: 302rpx;
    border-radius: 10rpx;
    border: 1rpx solid #e6e6e6;
}

.skunameShort {
    margin-top: 20rpx;
    margin-left: 20rpx;
    color: #B2B2B2;
    font-size: 20rpx;
}

.pdSpuTitle {
    margin-left: 20rpx;
    color: #B2B2B2;
    font-size: 20rpx;
}

.pageBottom {
    text-align: center;
    color: #B2B2B2;
    font-size: 20rpx;
    margin-top: 72rpx;
    margin-bottom: 32rpx;
}

.lookBigPicContent {
    width: 100%;
    height: 100%;
    background-color: transparent;
    position: relative;
}

.swiper-box {
    height: 100%;
    width: 100%;
}

.slide-image {
    width: 100%;
    height: 100%;
    display: flex;
}

.swiper-num {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 76rpx;
    text-align: center;
    color: white;
    font-size: 26rpx;
}